<Window x:Class="Akasztofa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Akasztofa"
        mc:Ignorable="d"
        Title="Akasztófa" Height="400" Width="650" MinHeight="400" MinWidth="650" Background="#FF2C2C2C" WindowStartupLocation="CenterScreen" Foreground="#FF2C2C2C">
    <Grid>
        <Viewbox>
            <StackPanel>
                <Label Content="Akasztófa" Foreground="White" Height="25" Width="108" FontWeight="Bold" HorizontalContentAlignment="Center"/>
                <Button Content="Bejelentkezés" Height="17" Width="111" Margin="2,0,2,2.5" FontSize="8" BorderBrush="#FF707070" Background="#FFDDDDDD" Click="anyad" />
                <Button Content="Regisztráció" Height="17" Width="111" FontSize="8" Margin="2,0,2,2.5" />
                <Button Content="Bejelentkezés" Height="17" Width="111" Margin="2,0,2,2.5" FontSize="8" BorderBrush="#FF707070" Background="#FFDDDDDD" BorderThickness="0.75,0.75,0.75,0.75" />
                <Button Content="Regisztráció" Height="17" Width="111" FontSize="8" Margin="2,0,2,2.5" Click="regisztracio" BorderThickness="0.75,0.75,0.75,0.75" />
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
